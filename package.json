{
    "name": "ask-kamos",
    "version": "1.0.0",
    "description": "Agentic AI Hackathon Entry",
    "scripts": {
        "dev": "firebase emulators:start",
        "watch:css": "npx tailwindcss -i ./public/css/main.css -o ./public/css/output.css --watch",
        "build:css": "npx tailwindcss -i ./public/css/main.css -o ./public/css/output.css --minify",
        "deploy": "npm run build:css && firebase deploy"
    },
    "devDependencies": {
        "firebase-tools": "^13.0.0",
        "tailwindcss": "^3.4.0"
    }
}